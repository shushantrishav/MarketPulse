# Build stage
FROM golang:1.23-alpine AS builder

# Install git + build deps
RUN apk add --no-cache git build-base

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Cache and download dependencies
RUN go mod download

# Copy source
COPY . .

# Build with CGO_ENABLED=0 for static binary
RUN CGO_ENABLED=0 GOOS=linux go build -a \
    -installsuffix cgo \
    -ldflags '-w -s -X main.version=dev' \
    -trimpath \
    -o /marketpulse ./cmd

# Production stage
FROM alpine:3.20

# Install ca-certificates + tzdata
RUN apk add --no-cache \
    ca-certificates \
    tzdata \
    && update-ca-certificates

# Create non-root user
RUN addgroup -g 1001 -S appgroup \
    && adduser -S appuser -u 1001 -G appgroup

# Copy binary + static assets
COPY --from=builder /marketpulse /usr/local/bin/
COPY web/static ./web/static

# Use non-root user
USER appuser

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

# Expose port
EXPOSE 8080

# Run
CMD ["/usr/local/bin/marketpulse"]
